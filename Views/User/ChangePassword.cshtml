@model ChangePaswordViewModel

@{
    Layout = "_LayoutAccount";
}


@section changePassword {

    <h3 class="font-weight-bold text-white">
                Şifremi Değiştir        <i class="fa-solid fa-key"></i>

        <hr/>
    </h3>
    <form asp-action="ChangePassword" asp-controller="User" method="post">
        <div class="form-col">

            <div class="form-group row mb-3">
                <label asp-for="OldPassword" class="col-sm-2 col-form-label font-weight-bold text-white">Eski Şifreniz</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text rounded-left" id="oldPassBtn">
                            <span id="oldEyeIcon">
                                <i class="fa-solid fa-eye-slash"></i> 
                            </span>
                        </span>
                    </div>
                    <input type="password" asp-for="OldPassword" class="form-control rounded-right" id="oldPassword" placeholder="Eski Şifreniz">
                </div>
                <div class="col-sm-10 offset-sm-2 mt-2">
                    <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="OldPassword"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="NewPassword" class="col-sm-2 col-form-label font-weight-bold text-white">Yeni Şifreniz</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text rounded-left" id="newPassBtn">
                            <span id="newEyeIcon">
                                <i class="fa-solid fa-eye-slash"></i> 
                            </span>
                        </span>
                    </div>
                    <input type="password" asp-for="NewPassword" class="form-control rounded-right" id="newPassword" placeholder="Yeni Şifreniz">
                </div>
                <div class="col-sm-10 offset-sm-2 mt-2">
                    <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="NewPassword"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label font-weight-bold text-white">Şifre Tekrarı</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text rounded-left" id="confirmPassBtn">
                            <span id="confirmedEyeIcon">
                                <i class="fa-solid fa-eye-slash"></i>
                            </span>
                        </span>
                    </div>
                    <input type="password" asp-for="ConfirmPassword" class="form-control rounded-right" id="confirmPassword" placeholder="Şifre Tekrarı">
                </div>
                <div class="col-sm-10 offset-sm-2 mt-2">
                    <span class="font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <button type="submit" class="col btn btn-dark rounded mb-2">Şifremi Değiştir <i class="fa-solid fa-key"></i> </button>




            @if (ViewBag.Hata != null)
            {
                <div class="font-weight-bold text-danger bg-light text-danger rounded" role="alert">
                    @ViewBag.Hata
                </div>
            }
        </div>
    </form>

    @if (TempData["PasswordChanged"] != null)
    {
        <div class="alert alert-success" role="alert" id="PasswordChanged">
            @TempData["PasswordChanged"]
        </div>
        <script>
            setTimeout(function () {
                var message = document.getElementById("PasswordChanged");
                message.remove();
            }, 5000);
        </script>
    }

}
<script>
    document.addEventListener("DOMContentLoaded", function () {

        var oldBtn = document.getElementById("oldPassBtn");
        var newBtn = document.getElementById("newPassBtn");
        var confirmBtn = document.getElementById("confirmPassBtn");

        var oldPassword = document.getElementById("oldPassword");
        var newPassword = document.getElementById("newPassword");
        var confirmPassoword = document.getElementById("confirmPassword");

        var oldEyeIcon = document.getElementById("oldEyeIcon");
        var newEyeIcon = document.getElementById("newEyeIcon");
        var confirmedEyeIcon = document.getElementById("confirmedEyeIcon");


        oldBtn.addEventListener("click", function () {
            if (oldPassword.type === "password") {
                oldPassword.type = "text";
                oldEyeIcon.innerHTML = `<i class="fa-solid fa-eye"></i>`;
            } else {
                oldPassword.type = "password";
                oldEyeIcon.innerHTML = `<i class="fa-solid fa-eye-slash"></i>`;
            }
        });
        newBtn.addEventListener("click", function () {
            if (newPassword.type === "password") {
                newPassword.type = "text";
                newEyeIcon.innerHTML = `<i class="fa-solid fa-eye"></i>`;
            } else {
                newPassword.type = "password";
                newEyeIcon.innerHTML = `<i class="fa-solid fa-eye-slash"></i></i>`;
            }
        });
        confirmBtn.addEventListener("click", function () {
            if (confirmPassoword.type === "password") {
                confirmPassoword.type = "text";
                confirmedEyeIcon.innerHTML = `<i class="fa-solid fa-eye"></i>`;
            } else {
                confirmPassoword.type = "password";
                confirmedEyeIcon.innerHTML = `<i class="fa-solid fa-eye-slash"></i></i>`;
            }
        });
    });
</script>
