@model KategoriViewModel;

@section AdminMenu {
    @await Html.PartialAsync("_AdminMenu")
}


<form asp-action="KategoriEkle" asp-controller="Admin" method="post">
    <div class="form-row">
        <div class="col">
            <input asp-for="KategoriAdi" class="form-control" placeholder="Kategori Adı">
        </div>
        <button type="submit" class="btn btn-dark rounded mb-2">Ekle</button>
    </div>
    <div class="col">
        <span class="row font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="KategoriAdi">
        </span>
    </div>
</form>

@if (TempData["KategoriEklendi"] != null)
{
    <div class="alert alert-success" id="successMessage">@TempData["KategoriEklendi"]</div>
}

@section Scripts {
    <script>
        setTimeout(function () {
            var successMessage = document.getElementById("successMessage");
            successMessage.remove();
        }, 2500);
    </script>
}