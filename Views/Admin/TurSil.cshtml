@model TurSilViewModel

@section AdminMenu {
    @await Html.PartialAsync("_AdminMenu")
}

<form asp-action="TurSil" asp-controller="Admin" method="post">
    <div class="form-row">
        <div class="col">
            <select asp-for="TurId" class="form-control" id="mySelect">
                <option selected disabled>Silinecek Türü Seçiniz</option>
                @foreach (var turler in Model.TurListesi)
                {
                    <option value="@turler.Value">@turler.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-dark rounded mb-2">Sil</button>
    </div>
    <div class="col">
        <span class="row font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="TurId">
        </span>
    </div>
</form>

@if (TempData["TurSilindi"] != null)
{
    <div class="alert alert-success" id="successMessage">@TempData["TurSilindi"]</div>

}

@section scripts {
    <script>
        setTimeout(function () {
            var successMessage = document.getElementById("successMessage");
            successMessage.remove();
        }, 2500);
    </script>
}


