@model CinsTurSilViewModel

@section AdminMenu {
    @await Html.PartialAsync("_AdminMenu")
}

<form asp-action="CinsTurSil" asp-controller="Admin" method="post">
    <div class="form-row">
        <div class="col">
            <select asp-for="Id" class="form-control">
                <option selected disabled>Kaldırılacak eşlemeyi Seçiniz</option>
                @foreach (var item in Model.CinslerTurlerListesi)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-dark rounded mb-2">Eşleştirmeyi Kaldır</button>
    </div>
    <div class="col">
        <span class="row font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="Id">
        </span>
    </div>
</form>

@if (TempData["EslemeKaldiridi"] != null)
{
    <div class="alert alert-success" role="alert" id="EslemeKaldiridi">
        @TempData["EslemeKaldiridi"]
    </div>

}

@section scripts {
    <script>
        setTimeout(function () {
            var message = document.getElementById("EslemeKaldiridi");
            message.remove();
        }, 2500);
    </script>
}
