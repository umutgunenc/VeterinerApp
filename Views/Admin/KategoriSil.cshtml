@model KategoriSilViewModel

@section AdminMenu {
    @await Html.PartialAsync("_AdminMenu")
}

<form asp-action="KategoriSil" asp-controller="Admin" method="post">
    <div class="form-row">
        <div class="col">
            <select asp-for="KategoriId" class="form-control">
                <option selected disabled >Silinecek Kategoriyi Seçiniz</option>
                @foreach (var kategori in Model.KategoriListesi)
                {
                    <option value="@kategori.Value">@kategori.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-dark rounded mb-2">Sil</button>
    </div>
    <div class="col">
        <span class="row font-weight-bold text-danger bg-light text-danger rounded" asp-validation-for="KategoriId">
        </span>
    </div>
</form>

@if (TempData["KategoriSilindi"] != null)
{
    <div class="alert alert-success" id="KategoriSilindi">@TempData["KategoriSilindi"]</div>

}

@section scripts{
    <script>
        setTimeout(function () {
            var successMessage = document.getElementById("KategoriSilindi");
            successMessage.remove();
        }, 2500);
    </script>
}
